        <view class="imgLeft weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="{{imagesrc}}" />
        </view>
        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__title">{{name}}</view>
            <view class="weui-media-box__desc">{{feature}}</view>
        </view>
    </navigator>
</view>

</view>
</template>
