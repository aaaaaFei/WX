}
.imgLeft{
  width: 50px;
  height: 50px;
  border-radius: 5px;
  overflow: hidden;
  margin-right: 10px;
}
.imgLeft image{
  width: 100%;
  height: 100%;
}
.bg{
  background-color: rgba(0,0,0,.3);
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.showModal{
  position: absolute;
  top: 200px;
  width: 200px;
  margin: 0 auto;
  z-index: 10;
  left: calc(50% - 100px);
  display: flex;
  padding: 10px;
  background-color: #fff;
}
.showModal button{
  width: 50%;
}
.showModal .weui-cells{
  position: initial;
}
