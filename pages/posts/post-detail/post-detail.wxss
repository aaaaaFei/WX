.container{
  width: 100%;
  display:flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}
.goodslist
{
  border: 5rpx solid black;
  margin-top: 30rpx;
  width:100%;
}
.goodslist image{
  position: relative;
